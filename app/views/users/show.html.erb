<header>
  <p style="color: green"><%= notice %></p>
  <h1>
    <%= @user.name %>
    <% if @user.admin? %>
      <sup>Admin</sup>
    <% end %>
  </h1>
  <p>
    Kontakt: <%= @user.email %>
  </p>
  <figure>
    <%= image_tag "https://joesch.moe/api/v1/#{@user.id}", height: 500 %>
  </figure>
  <%= render "shows" %>
</header>
